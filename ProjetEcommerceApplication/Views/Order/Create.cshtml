@model ProjetEcommerceApplication.Models.CreateOrderViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <h1>Create Order</h1>

    <div class="row">
        <div class="col-md-6">
            <h4>Order Details</h4>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="ArticleId" class="control-label">Product</label>
                    <select asp-for="ArticleId" class="form-control" asp-items="ViewBag.ArticleId"></select>
                </div>

                <div class="form-group">
                    <label asp-for="QuantityCommand" class="control-label">Quantity</label>
                    <input asp-for="QuantityCommand" class="form-control" />
                    <span asp-validation-for="QuantityCommand" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UserName" class="control-label">User Name</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Phone" class="control-label">Phone</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="control-label">Address</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>

        <div class="col-md-6">
            <h4>Product Image</h4>
            <hr />
            <div>
                <!-- Placeholder for product image -->
                <img id="productImage" src="~/images/@Url.Content(Model.Imageurl)" alt="Product Image" class="img-fluid" style="max-height: 200px;" />
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Article" asp-action="Catalogue" class="btn btn-secondary">Catalogue</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    
}
