@model IEnumerable<ProjetEcommerceApplication.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Article)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityCommand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Totaleprice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommandState)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.ArticleId)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantityCommand)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Totaleprice)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
            
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommandState)
                </td>
               
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                
            </td>
        </tr>
}
    </tbody>
</table>
