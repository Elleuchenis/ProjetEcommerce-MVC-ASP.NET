@model ProjetEcommerceApplication.Models.Article

@{
    ViewData["Title"] = "DetailsUser";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="~/images/@Model.Imageurl" alt="@Model.ArticleName" class="img-fluid" />
        </div>
        <div class="col-md-6">
            <h1>@Model.ArticleName</h1>
            <dl class="row">
                <dt class="col-sm-4">Description:</dt>
                <dd class="col-sm-8">@Model.ArticleDescription</dd>

                <dt class="col-sm-4">Price:</dt>
                <dd class="col-sm-8">@Model.Price</dd>

                <dt class="col-sm-4">Quantity:</dt>
                <dd class="col-sm-8">@Model.Quantity</dd>

                
            </dl>

            <div class="mt-4">
                <a asp-controller="Order" asp-action="Create" asp-route-id="@Model.ArticleId" class="btn btn-primary">Buy</a>
                <a asp-action="Catalogue" class="btn btn-secondary">Catalogue</a>
            </div>
        </div>
    </div>
</div>